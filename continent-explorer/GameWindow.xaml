<Window x:Class="continent_explorer.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:continent_explorer"
        mc:Ignorable="d"
        xmlns:HelixToolkit="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Core.Wpf"
        Title="GameWindow" Height="450" Width="800">
    <Grid>
        <HelixToolkit:HelixViewport3D x:Name="viewport" ZoomExtentsWhenLoaded="True">
            <HelixToolkit:SunLight/>
            <ModelVisual3D x:Name="globeModel"/>
        </HelixToolkit:HelixViewport3D>

        <!-- Label to show continent names -->
        <TextBlock x:Name="continentLabel" 
                   FontSize="16" FontWeight="Bold" Foreground="White" 
                   Background="Black" Padding="5"
                   Visibility="Hidden"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="10"/>
    </Grid>
</Window>
